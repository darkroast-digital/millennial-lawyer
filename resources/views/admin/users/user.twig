{% extends 'layouts/app.twig' %}
{% block pageclass %}admin{% endblock %}
{% block title %}View Account{% endblock %}

{% block content %}

{% include 'admin/header.twig' %}

<section class="users-view">
    <div class="users-view__container container">
        <div class="column-12 title-bar">
            <h1>View User: <strong>{{ auth.user.name }}</strong></h1>
            <a href="{{ path_for('posts.index') }}" class="button"><i class="fa fa-angle-right"></i> Back to Posts</a>
        </div>

        <div class="column-6 avatar">
            <div class="avatar-wrapper">
                <img src="/assets/uploads/avatars/{{ auth.user.id }}/avatar.jpg" draggable="false">
            </div>
            <a href="{{ path_for('users.edit', { 'id': auth.user.id }) }}" class="button"><i class="fa fa-angle-right"></i> Edit Account</a>
        </div>

        <div class="column-6 content">
            <div class="detail">
                <h4>Name:</h4>
                <p>{{ auth.user.name }}</p>
            </div>

            <div class="detail">
                <h4>Email:</h4>
                <p>{{ auth.user.email }}</p>
            </div>

            <div class="detail">
                <h4>Created:</h4>
                <p>{{ auth.user.created_at|date("m/d/Y") }}</p>
            </div>

            <div class="detail">
                <h4>Updated:</h4>
                <p>{{ auth.user.updated_at|date("m/d/Y") }}</p>
            </div>
        </div>
    </div>
</section>

{% endblock %}
